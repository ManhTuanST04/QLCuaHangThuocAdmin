@using ClientWebAPI.Models;
@model IEnumerable<RoleModel>

@{
    ViewBag.Title = "GetAllRole";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<PermissionModel> lstPer = (List<PermissionModel>)ViewBag.LIST_ALL_PER;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý vài trò và quyền</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="display: list-item;font-weight: 700; height: 55px;">
                <div style="float:left">Danh sách vai trò</div>
                <div style="float:right"><button class="btn btn-primary" id="openModal">Thêm Mới</button></div>
            </div>
            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
