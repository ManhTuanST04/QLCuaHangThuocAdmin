                                <th style="width:10%; ">Chức Năng</th>
                                <th style="text-align:center;width:10%;">Phân quyền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count() > 0)
                            {
                                foreach (var role in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@role.id</td>
                                        <td>@role.name</td>
                                        <td>@role.code</td>
                                        <td>
                                            <a ><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> &nbsp;&nbsp;
                                            <a onclick=""><i class="fa fa-trash-o" aria-hidden="true"></i></a> &nbsp;&nbsp;
                                            
                                        </td>
                                        <td style="text-align:center">
                                            <a href="/Permission/GetPerOfRole?roleId=@role.id"><i class="fa fa-users" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
