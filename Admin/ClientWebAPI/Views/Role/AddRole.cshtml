
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm mới Vai trò</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Điền đầy đủ các trường thông tin có gắn dấu (*)
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" action="AddRole">
                            <div class="form-group">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                            </div>
                            <div class="form-group">
                                <label>Tên Vai Trò (*)</label>
                                <input class="form-control" name="name" placeholder="name role">
                            </div>
                            <div class="form-group">
                                <label>Mã Vai Trò (*)</label>
                                <input class="form-control" name="code" placeholder="code role">
                            </div>

                            <button type="submit" class="btn btn-primary">Thêm mới</button>
                            <button type="reset" class="btn btn-danger">Hủy bỏ</button>
                        </form>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
