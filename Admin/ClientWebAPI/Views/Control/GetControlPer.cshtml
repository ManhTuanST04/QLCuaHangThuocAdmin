@using ClientWebAPI.Models;
@model IEnumerable<ControlModel>

@{
    ViewBag.Title = "GetControlPer";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<ControlModel> lstAllControl = (List<ControlModel>)ViewBag.LST_ALL_CONTROL;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý control của Quyền</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="display: list-item;font-weight: 700; height: 55px;">
                <div style="float:left">Danh sách Control</div>
            </div>
            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th style="width:20%;text-align:center">Check</th>
                                <th style="width:40%; ">Tên Control</th>
                                <th style="width:40%; ">Mã Control</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (lstAllControl.Count > 0)
                            {
                                for (int i = 0; i < lstAllControl.Count; i++)
                                {
                                    ControlModel con = lstAllControl[i];
                                    bool isCheck = false;

                                    foreach (var perModel in Model)
                                    {
                                        if (con.id == perModel.id)
                                        {
                                            isCheck = true;
                                            break;
                                        }
                                        else
                                        {
                                            isCheck = false;
                                        }
                                    }

                                    if (isCheck)
                                    {
                                        <tr class="odd gradeX">
                                            <td style="text-align:center"><input type="checkbox" name="role" value="@con.id" checked /></td>
                                            <td>@con.name</td>
                                            <td>@con.code</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr class="odd gradeX">
                                            <td style="text-align:center"><input type="checkbox" name="role" value="@con.id" /></td>
                                            <td>@con.name</td>
                                            <td>@con.code</td>
                                        </tr>
                                    }

                                }
                            }

                        </tbody>
                    </table>
                </div>
                <div class="well" style="text-align:center">
                    <a class="btn btn-danger" href="/Role/GetAllRole">Trở về</a>
                    <button id="btn-save" class="btn btn-primary">Ghi lại</button>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

