@using ClientWebAPI.Models
@model NhaCungCapModel
@{
    ViewBag.Title = "ChuanBiSuaNhaCungCap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sửa nhà cung cấp</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Điền đầy đủ các trường thông tin có gắn dấu (*)
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" action="SuaNhaCungCap">
                            <input name="id" value="@Model.id" hidden/>
                            <div class="form-group">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                            </div>
                            <div class="form-group">
                                <label>Tên Nhà Cung Cấp (*)</label>
                                <input class="form-control" name="ten" value="@Model.ten" placeholder="tên">
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ (*)</label>
                                <input class="form-control" name="diaChi" value="@Model.diaChi" placeholder="địa chủ">
                            </div>
                            <div class="form-group">
                                <label>Điện Thoại (*)</label>
                                <input class="form-control" name="dienThoai" value="@Model.dienThoai" placeholder="điện thoại">
                            </div>
                            <div class="form-group">
                                <label>Website</label>
                                <input class="form-control" name="website" value="@Model.website" placeholder="website">
                            </div>
                            <div class="form-group">
                                <label>Email (*)</label>
                                <input class="form-control" type="email" name="email" value="@Model.email" placeholder="email">
                            </div>
                            <div class="form-group">
                                <label>Quốc gia</label>
                                <input class="form-control" name="quocGia" value="@Model.quocGia" placeholder="quốc gia">
                            </div>

                            <button type="submit" class="btn btn-primary">Sửa</button>
                            <button type="reset" class="btn btn-danger">Hủy bỏ</button>
                        </form>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
